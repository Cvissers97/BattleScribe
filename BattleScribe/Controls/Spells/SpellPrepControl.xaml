             mc:Ignorable="d" Height="32" BorderBrush="Black" BorderThickness="1" Width="450"
             d:DesignHeight="300" d:DesignWidth="300"
             MouseRightButtonUp="UserControl_MouseRightButtonUp">   
    <Grid Margin="0,0,-2,-2" Width="450">
        <CheckBox Name="chkPrep" Content="Prepared" FontWeight="Bold"  Margin="316,6,60,7"/>
        <Label Name="lblName" Content="Name" HorizontalContentAlignment="Center" Margin="0,0,325,0" FontWeight="Bold"  />
        <Label Name="lblLvl" Content="level" HorizontalContentAlignment="Center" Margin="158,0,139,0" FontWeight="Bold"  />
    </Grid>
</UserControl>

<UserControl x:Class="BattleScribe.Controls.WeaponLegend"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="200" Height="21.25">
    <Grid Margin="0,0,0,0">
        <Grid.Resources>
            <Style x:Key="LabelStyle" TargetType="{x:Type Label}">
                <Setter Property="FontWeight" Value="Bold"></Setter>
                <Setter Property="FontSize" Value="10"></Setter>
                <Setter Property="FontFamily" Value="Times New Roman"></Setter>
            </Style>
            <Style BasedOn="{StaticResource LabelStyle}" TargetType="{x:Type Label}" />
        </Grid.Resources>
        <Label Content="Weapon name" HorizontalAlignment="Left" VerticalAlignment="Top" Height="21" Width="110"/>
        <Label Content="To hit" HorizontalAlignment="Left" Margin="110,0,0,0" VerticalAlignment="Top" Height="21" Width="39" />
        <Label Content="Damage" HorizontalAlignment="Left" Margin="150,0,0,0" VerticalAlignment="Top" Height="21" Width="50" />
    </Grid>
</UserControl>

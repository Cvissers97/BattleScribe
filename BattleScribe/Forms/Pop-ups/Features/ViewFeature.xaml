<Window x:Class="BattleScribe.Forms.Pop_ups.Features.ViewFeature"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="View Feature" Height="300" Width="300">
    <Grid>
        <Label Content="Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Description" HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tbName" HorizontalAlignment="Left" Height="23" Margin="53,14,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="207"/>
        <RichTextBox Name="rtbDesc" HorizontalAlignment="Left" Height="156" Margin="10,74,0,0" VerticalAlignment="Top" Width="250">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Description"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
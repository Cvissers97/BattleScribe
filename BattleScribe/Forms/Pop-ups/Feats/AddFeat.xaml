<Window x:Class="BattleScribe.Forms.Pop_ups.AddFeat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddFeat" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Label Content="Feat" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <ComboBox Name="cbFeat" Margin="88,10,0,0" VerticalAlignment="Top" Width="187" Height="26" SelectionChanged="cbFeat_SelectionChanged" HorizontalAlignment="Left"/>
        <Label Content="Prerequisite" Margin="10,47,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox Name="tbPrereq" Height="23" Margin="88,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="187" HorizontalAlignment="Left"/>
        <Label Content="Description" Margin="10,86,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <RichTextBox Name="rtbDesc" Height="100" Margin="10,112,0,0" Width="265" VerticalAlignment="Top">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Name="btnAdd" Content="Add" Margin="186,230,0,0" VerticalAlignment="Top" Width="88" Height="29" Click="btnAdd_Click" HorizontalAlignment="Left"/>

    </Grid>
</Window>

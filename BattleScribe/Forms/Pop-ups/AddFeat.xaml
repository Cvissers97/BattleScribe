<Window x:Class="BattleScribe.Forms.Pop_ups.AddFeat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddFeat" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Label Content="Feat" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="cbFeat" HorizontalAlignment="Left" Margin="88,10,0,0" VerticalAlignment="Top" Width="187" Height="26" SelectionChanged="cbFeat_SelectionChanged"/>
        <Label Content="Prerequisite" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tbPrereq" HorizontalAlignment="Left" Height="23" Margin="88,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="187"/>
        <Label Content="Description" HorizontalAlignment="Left" Margin="10,86,0,0" VerticalAlignment="Top"/>
        <RichTextBox Name="rtbDesc" HorizontalAlignment="Left" Height="100" Margin="10,112,0,0" VerticalAlignment="Top" Width="265">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="186,230,0,0" VerticalAlignment="Top" Width="88" Height="29" Click="btnAdd_Click"/>

    </Grid>
</Window>

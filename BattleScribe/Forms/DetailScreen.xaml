                    <TextBox Name="tbSlot9" HorizontalAlignment="Left" Height="22" Margin="58,433,0,0" TextWrapping="Wrap" Text="12" VerticalAlignment="Top" Width="32" TextChanged="tbSlot9_TextChanged"/>

